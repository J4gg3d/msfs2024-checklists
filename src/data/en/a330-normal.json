{
  "aircraft": "Airbus A330-200",
  "version": "1.1",
  "sections": [
    {
      "id": "preflight",
      "title": "PREFLIGHT",
      "color": "#4a90d9",
      "items": [
        {
          "id": "pf-1",
          "item": "PARKING BRAKE",
          "action": "SET",
          "autoCheck": { "simVar": "parkingBrake", "expectedValue": true },
          "details": {
            "description": "The parking brake must be set before starting the preflight check to prevent unintended rolling of the aircraft.",
            "steps": [
              "Pull parking brake lever up",
              "Verify PARK BRK indication on ECAM is illuminated",
              "Ensure aircraft is not rolling"
            ],
            "notes": "The parking brake should only be released when the aircraft is ready for pushback or taxi."
          }
        },
        {
          "id": "pf-2",
          "item": "THROTTLES",
          "action": "IDLE",
          "autoCheck": { "simVar": "throttlesIdle", "expectedValue": true },
          "details": {
            "description": "The thrust levers must be in the IDLE position.",
            "steps": [
              "Move both thrust levers to IDLE position",
              "Ensure no thrust indication is shown on ECAM"
            ]
          }
        },
        {
          "id": "pf-3",
          "item": "ENGINE MASTER SWITCHES",
          "action": "OFF",
          "autoCheck": { "simVar": "engineMaster1", "expectedValue": false, "simVar2": "engineMaster2", "expectedValue2": false, "logic": "and" },
          "details": {
            "description": "The Engine Master Switches control the fuel supply to the engines.",
            "steps": [
              "Set both Engine Master Switches to OFF",
              "Verify FUEL valve indicators show closed"
            ],
            "notes": "These switches are only set to ON during engine start."
          }
        },
        { "id": "pf-4", "item": "ENGINE MODE SELECTOR", "action": "NORM", "details": null },
        { "id": "pf-5", "item": "WEATHER RADAR", "action": "OFF", "details": null },
        {
          "id": "pf-6",
          "item": "GEAR LEVER",
          "action": "DOWN",
          "autoCheck": { "simVar": "gearHandleDown", "expectedValue": true },
          "details": {
            "description": "The gear lever must be in the DOWN position and all three green lights must be illuminated.",
            "steps": [
              "Verify gear lever is in DOWN position",
              "Confirm three green lights for Nose, Left and Right Gear"
            ]
          }
        }
      ]
    },
